{
    "manifest_version": 2,
  
    "name": "Scroll Bar",
    "description": "Adds a scrollbar to the top of your pages",
    "version": "1.0",
    "content_scripts":[{
        "matches": ["<all_urls>"],
        "js": ["display.js","scrollbar.js"]
    }],
    "browser_action": {
     "default_icon": "logo.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab"
     ]
  }